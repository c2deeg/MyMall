<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activities.RegisterDetailActivity.RegisterDetailActivity">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/imgback" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How would you like to be visited?"
        android:textColor="@color/shopownerbuttoncolor"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Store Owner may choose Listing-only or to sell items using their listing"
        android:textColor="#0F2D52"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
    <Button
        android:id="@+id/btn_storelisting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Store listing"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="20dp"
        android:textAllCaps="false"
        android:background="@drawable/roundcorner2"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/btn_selableitems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Store listing with selable items"
        android:textColor="@color/white"
        android:padding="20dp"
        android:background="@drawable/roundcorner"
        android:textAllCaps="false"
        android:backgroundTint="@color/shopownerbuttoncolor"
        android:textSize="16sp"
        android:layout_margin="20dp"/>

    </LinearLayout>

</LinearLayout>