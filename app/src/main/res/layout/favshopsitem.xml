<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:id="@+id/linearlayout"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="10dp"
        android:background="@drawable/storepic"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/img_storepic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/download" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_margin="0dp"
            android:background="@drawable/roundcorner2"
            android:backgroundTint="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_storename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Store Name"
                android:textColor="@color/shopownerbuttoncolor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_storeitems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Girls Shoes | Boy Clothes"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>