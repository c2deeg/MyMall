<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Activities.SelecroleActivity.SelectRoleActivity">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="50dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/selectrolelogo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/lightblue"
        android:text="Store Owners may choose Listing-Only or to sell items using their listing"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/sfpromedium"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
    <Button
        android:id="@+id/btn_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="20dp"
        android:background="@drawable/roundcorner2"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/btn_shopowner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHOP OWNER"
        android:textColor="@color/white"
        android:padding="20dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="@color/shopownerbuttoncolor"
        android:textSize="16sp"
        android:layout_margin="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHOOSING TO SELL ITEMS USING OUR APP PROMOTES A MORE CONVENIENT BUYING EXPERIENCE"
            android:textColor="@color/lightblue"
            android:layout_gravity="center"
            android:fontFamily="@font/sfpromedium"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_margin="20dp"/>
    </LinearLayout>


</LinearLayout>